mydic = {}
def __init__(mydic):
    mydic['survey']='조사하다'
    mydic['flower']='꽃'
    mydic['cloud']='구름'
    mydic['rain']='비'
    mydic['rainbow']='무지개'
    mydic['wind']='바람'
    mydic['law']='법'
    

